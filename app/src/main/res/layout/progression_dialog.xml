<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/dialog_workout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/dialog_first_exercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:layout_below="@id/dialog_workout_name"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/dialog_weights_label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/colorBlack"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/dialog_first_exercise"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/dialog_weights_label1_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/colorBlack"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/dialog_weights_label1"
        android:layout_marginBottom="16dp" />


    <TextView
        android:id="@+id/dialog_second_exercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:layout_below="@id/dialog_weights_label1_1"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/dialog_weights_label2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/colorBlack"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/dialog_second_exercise"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/dialog_weights_label2_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorBlack"
        android:layout_below="@id/dialog_weights_label2"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/dialog_third_exercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:layout_below="@id/dialog_weights_label2_2"
        android:layout_marginBottom="16dp"/>


    <TextView
        android:id="@+id/dialog_weights_label3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/colorBlack"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/dialog_third_exercise"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/dialog_weights_label3_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/colorBlack"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/dialog_weights_label3"
        android:layout_marginBottom="16dp" />


    <TextView
        android:id="@+id/dialog_fourth_exercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:layout_below="@id/dialog_weights_label3_3"
        android:layout_marginBottom="16dp"/>


    <TextView
        android:id="@+id/dialog_weights_label4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/colorBlack"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/dialog_fourth_exercise"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/dialog_weights_label4_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorBlack"
        android:layout_below="@id/dialog_weights_label4"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="16dp" />


    <TextView
        android:id="@+id/dialog_fifth_exercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:layout_below="@id/dialog_weights_label4_4"
        android:layout_marginBottom="16dp"/>



    <TextView
        android:id="@+id/dialog_weights_label5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/colorBlack"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/dialog_fifth_exercise"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/dialog_weights_label5_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorBlack"
        android:layout_below="@id/dialog_weights_label5"
        android:layout_marginBottom="16dp" />


    <Button
        android:id="@+id/btnOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_weights_label5_5"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="Ok" />


</RelativeLayout>
